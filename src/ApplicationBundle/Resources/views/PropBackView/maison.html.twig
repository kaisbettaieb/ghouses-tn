<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8"/>
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png"/>
    <link rel="icon" type="image/png" href="../assets/img/favicon.png"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <title>GuestHouse | Espace Pro | Maison d'hote</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport'/>
    <meta name="viewport" content="width=device-width"/>
    {% include '@Application/PropBackView/header.html.twig' %}
</head>
<body>
<div class="wrapper">
    {% include '@Application/PropBackView/sidebar.html.twig' %}
    <div class="main-panel">
        {% include '@Application/PropBackView/navbar.html.twig' %}
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    {{ form_start(ghouse_add_form, {'attr' : {'id' : 'ghouse_add_form' } }) }}
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header" data-background-color="purple">
                                <h4 class="title text-center">Ajouter Maison d'hote</h4>
                                <p class="category">text</p>
                            </div>
                            <div class="card-content">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group label-floating">
                                            {{ form_widget(ghouse_add_form.nom, {'attr': { 'class' : 'form-control'} }) }}
                                            <label class="control-label">Nom de la maison</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group label-floating">
                                            {{ form_widget(ghouse_add_form.nom_prenom_prop, {'attr': { 'class' : 'form-control' } }) }}
                                            <label class="control-label">Nom et prenom du proprietaire</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group label-floating">
                                            {{ form_widget(ghouse_add_form.address, {'attr': { 'class' : 'form-control' } }) }}
                                            <label class="control-label" for="adresse">Adresse de la maison </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group label-floating">
                                            {{ form_widget(ghouse_add_form.email, {'attr': { 'class' : 'form-control' } }) }}
                                            <label class="control-label">Email</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div id="map-container" class="z-depth-1-half map-container"
                                             style="height: 400px"></div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group label-floating">
                                            {{ form_widget(ghouse_add_form.homeNum, {'attr': { 'class' : 'form-control' } }) }}
                                            <label class="control-label" for="phone-fixe">Telephone fixe</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group label-floating">
                                            {{ form_widget(ghouse_add_form.mobileNum, {'attr': { 'class' : 'form-control' } }) }}
                                            <label class="control-label" for="phone-portable">Telephone portable</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="control-label">A propos de la maison</label>
                                            <div class="form-group label-floating">
                                                <label class="control-label">Une description de la maison d'hote</label>
                                                {{ form_widget(ghouse_add_form.aPropos, {'attr': { 'rows' : '5', 'class': 'form-control'} }) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">Condition géneral de
                                                la maisons</label>
                                            <div class="form-group label-floating">
                                                <label class="control-label">Veuillez séparer les conditions par un <
                                                    <span style="color: red; font-size: 25px">;</span> ></label>
                                                {{ form_widget(ghouse_add_form.conditions, {'attr': { 'rows' : '5', 'class': 'form-control' } }) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">Qu'est-ce que la maison offre</label>
                                            <div class="form-group label-floating">
                                                <label class="control-label"> Veuillez séparer les offres par un <
                                                    <span style="color: red; font-size: 25px">;</span> ></label>
                                                {{ form_widget(ghouse_add_form.options, {'attr': { 'class' : 'form-control',  'rows' : '5' } }) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-5">
                                        <div class="form-group label-floating">
                                            {{ form_widget(ghouse_add_form.prixNuit, {'attr': { 'class' : 'form-control' } }) }}
                                            <label class="control-label">Prix par nuit en DT</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="control-label">Les mots clés</label>
                                        </div>
                                        <div class="form-group label-floating">
                                            <label class="control-label">Les mots clés qui sont en relation avec
                                                votre
                                                maison, veuillez mettre des mots precis.Veuillez séparer les
                                                mots par un
                                                <
                                                <span style="color: red; font-size: 25px">;</span> ></label>
                                            {{ form_widget(ghouse_add_form.mots_cles, {'attr': { 'class' : 'form-control', 'rows' : '5' } }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    {{ form_widget(ghouse_add_form.mapLat, {'attr': { 'style' : 'display:none' } }) }}
                                    {{ form_widget(ghouse_add_form.mapLng, {'attr': { 'style' : 'display:none' } }) }}
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary pull-right">Update Profile</button>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card card-profile">
                            <div class="content">
                                <h4 class="card-title">Ajouter des Images de votre maison d'hote</h4>
                                <p class="card-content">
                                    Veuillez choisir au moin 3 images.
                                    Les conditions:<br>
                                <ul>
                                    <li>Les images doivent étres claire.</li>
                                    <li>Les images doivent étres réelles</li>
                                    <li>Les images doivent avoir l'extension <br><span
                                                style="color: red; font-size: 25px"> .png</span> ou <span
                                                style="color: red; font-size: 25px">.jpeg</span></li>
                                </ul>
                                {{ form_widget(ghouse_add_form.gh_images) }}
                                <a href="#" id="add_image" class="btn btn-default btn-md">Joindre une photo</a>
                                </p>
                            </div>
                        </div>
                    </div>
                    {{ form_end(ghouse_add_form) }}
                </div>
            </div>
        </div>
        <footer class="footer">
            <div class="container-fluid">
                <nav class="pull-left">
                    <ul>
                        <li>
                            <a href="{{ url('application_propback_dashboard') }}">
                                Accueil
                            </a>
                        </li>
                    </ul>
                </nav>
                <p class="copyright pull-right">
                    &copy;
                    <script>
                        document.write(new Date().getFullYear())
                    </script>
                    Developped by <a href="https://www.linkedin.com/in/kais-bettaieb-15810a119/">Kais Bettaieb</a>,
                    GuestHouses-Tunisia, tout droit reservé
                </p>
            </div>
        </footer>
    </div>
</div>
{% include '@Application/PropBackView/footer.html.twig' %}
<script async defer
        src="https://maps.google.com/maps/api/js?key=AIzaSyBKjHhqdkrPFmPrEmbVYMwTVoq-ku_cUQI&callback=initMap"></script>
<script type="text/javascript" src="{{ asset('assets/js/ajouter-ghouse.js') }}"></script>

{% for label,message in app.flashes %}
    <script>
        $(document).ready(function () {
            {
                $.notify({
                    title: '<strong>'+'{{ label|upper }}'+'</strong>',
                    message: '{{ message[0] }}'
                }, {
                    offset: {
                        x: 5,
                        y: 70
                    },
                    type: '{{ label }}'
                });
            }
        });
    </script>
    {% if label == "ErrorIMGExtension" %}
    <script>
        $(document).ready(function () {
            {
                $.notify({
                    title: '<strong>'+'{{ label|upper }}'+'</strong>',
                    message: {{ message[0] }}
                }, {
                    offset: {
                        x: 5,
                        y: 70
                    },
                    type: danger
                });
            }


        });
    </script>
    {% endif %}
{% endfor %}

</body>

</html>